<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/gip_12345_complaint_tilte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="8sp"
        android:ellipsize="end"
        android:lines="1"
        android:text="测试"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="5sp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="信件编号："
            android:textColor="@color/gip_txt_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/gip_12345_complaint_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="wx20130602031"
            android:textColor="@color/gip_txt_gray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="信件分类："
            android:textColor="@color/gip_txt_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/gip_12345_complaint_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="咨询"
            android:textColor="@color/gip_txt_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="5sp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="答复部门："
            android:textColor="@color/gip_txt_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/gip_12345_complaint_depname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="市建设局"
            android:textColor="@color/gip_txt_gray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="答复时间："
            android:textColor="@color/gip_txt_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/gip_12345_complaint_answerDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2013-06-04"
            android:textColor="@color/gip_txt_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="5sp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="预览量："
                android:textColor="@color/gip_txt_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/gip_12345_complaint_readcount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="123"
                android:textColor="@color/gip_txt_gray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="满意度评价："
                android:textColor="@color/gip_txt_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/gip_12345_complaint_appraise"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="满意"
                android:textColor="@color/gip_txt_gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>