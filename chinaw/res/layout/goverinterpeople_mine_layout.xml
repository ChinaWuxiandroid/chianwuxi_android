<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp" >

        <RadioGroup
            android:id="@+id/goverinterpeople_mine_radioGroup"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/goverinterpeople_mine_radioButton_12345"
                style="@style/goverinterpeople_mine_radiobutton_style"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1.3"
                android:background="@drawable/title_item_select_bg"
                android:checked="true"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="12345來信办理平台"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/goverinterpeople_mine_radioButton_suggestionPlatform"
                style="@style/goverinterpeople_mine_radiobutton_style"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/title_item_bg"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="征求意见平台"
                android:textColor="@color/gip_button_blue"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/goverinterpeople_mine_radioButton_internetGoverSaloon"
                style="@style/goverinterpeople_mine_radiobutton_style"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/title_item_bg"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="网上政务大厅"
                android:textColor="@color/gip_button_blue"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/goverinterpeople_mine_radioButton_infoPublicPlatform"
                style="@style/goverinterpeople_mine_radiobutton_style"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/title_item_bg"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="信息公开平台"
                android:textColor="@color/gip_button_blue"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/goverinterpeople_mine_radioButton_publicForum"
                style="@style/goverinterpeople_mine_radiobutton_style"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/title_item_bg"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="公众          论坛"
                android:textColor="@color/gip_button_blue"
                android:textSize="12sp" />
        </RadioGroup>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/goverinterpeople_mine_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>