<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background"
    android:orientation="vertical" >

     <include
        android:id="@+id/search_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/goversaloon_title_search_layout" />
    <RelativeLayout
        android:id="@+id/btn_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_head" >

        <ImageView
            android:id="@+id/gover_eff_btn_mail_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dip"
            android:src="@drawable/mail_btn_search" />

        <ImageView
            android:id="@+id/gover_eff_btn_writemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:src="@drawable/iwantwritemail_ibtn_bk" />
    </RelativeLayout>

    <FrameLayout
        android:layout_below="@+id/btn_rl"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gover_eff_pb" 
            android:layout_gravity="center"/>

        <ListView
            android:id="@+id/gover_eff_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ListView>
    </FrameLayout>
  <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/goversaloon_foot_search_layout" />
</RelativeLayout>