<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/cgi_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="标题"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/cgi_list_publish_dept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cgi_list_title"
        android:layout_below="@+id/cgi_list_title"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="发布机构"
        android:textSize="13sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/cgi_list_open_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cgi_list_publish_dept"
        android:layout_below="@+id/cgi_list_publish_dept"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="公开时间"
        android:textSize="13sp" />

</RelativeLayout>