<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/my_apply_open_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="标题：房产证状态查询"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/my_apply_open_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/my_apply_open_title"
        android:layout_below="@+id/my_apply_open_title"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:text="编号：WX20130530051"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/my_apply_open_answerdep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/my_apply_open_code"
        android:layout_below="@+id/my_apply_open_code"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:text="答复部门：市住保房管局"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/my_apply_open_answertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/my_apply_open_answerdep"
        android:layout_below="@+id/my_apply_open_answerdep"
        android:layout_marginBottom="5sp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:text="答复时间：2013-05-30"
        android:textSize="13sp" />

</RelativeLayout>