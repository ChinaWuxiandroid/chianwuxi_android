<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp" >

        <RadioGroup
            android:id="@+id/goverinterpeople_suggest_radioGroup"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/goverinterpeople_suggest_radioButton_lawSuggestion"
                style="@style/goverinterpeople_mine_radiobutton_style"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1.3"
                android:background="@drawable/title_item_select_bg"
                android:checked="true"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="立法征求意见"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/goverinterpeople_suggest_radioButton_internetSurvey"
                style="@style/goverinterpeople_mine_radiobutton_style"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/title_item_bg"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="网上调查"
                android:textColor="@color/gip_button_blue"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/goverinterpeople_suggest_radioButton_people"
                style="@style/goverinterpeople_mine_radiobutton_style"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/title_item_bg"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="民意征集"
                android:textColor="@color/gip_button_blue"
                android:textSize="12sp" />
        </RadioGroup>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/goverinterpeople_suggest_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>