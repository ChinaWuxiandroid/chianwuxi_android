<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/video_comment_pop_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15sp"
        android:text="我来说说"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:layout_marginTop="15sp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/video_comment_pop_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称：" />

        <EditText
            android:id="@+id/video_comment_pop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/worksuggestbox_edit_small_bk"
            android:hint="请输入昵称"
            android:paddingLeft="3sp"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:layout_marginTop="10sp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:text="内容：" />

        <EditText
            android:id="@+id/video_comment_pop_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/worksuggestbox_edit_big_bk"
            android:gravity="left|top"
            android:hint="请输入内容"
            android:inputType="textMultiLine"
            android:minLines="6"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="20sp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/video_comment_pop_submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/forum_submitbtn_bg"
            android:text="提交"
            android:textColor="#ff095ce1"
            android:textSize="13sp" />
        
        <Button
            android:id="@+id/video_comment_pop_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20sp"
            android:background="@drawable/forum_submitbtn_bg"
            android:text="取消"
            android:textColor="#ff095ce1"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>