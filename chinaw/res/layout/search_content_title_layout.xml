<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header_back"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/search_content_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/slide_back_btn" />

    <TextView
        android:id="@+id/search_Title_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/search_content_back_btn"
        android:singleLine="true"
        android:text="全站搜索"
        android:textSize="20dip" />

    <ImageView
        android:id="@+id/search_content_show_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/search_content_list"
        android:src="@drawable/slide_open_close_btn" />

    <ImageView
        android:id="@+id/search_content_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/search_content_share"
        android:src="@drawable/slide_open_close_btn" />

    <ImageView
        android:id="@+id/search_content_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/slide_open_close_btn" />

</RelativeLayout>