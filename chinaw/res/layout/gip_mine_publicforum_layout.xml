<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp" >

        <RadioGroup
            android:id="@+id/gip_mine_publicforum_radioGroup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/gip_mine_publicforum_radioButton_myTheme"
                style="@style/goverinterpeople_mine_radiobutton_style"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/gip_button_selected_bk"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="我的       主题"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/gip_mine_publicforum_radioButton_themeTJoin"
                style="@style/goverinterpeople_mine_radiobutton_style"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="我参与的 主题"
                android:textColor="@color/gip_second_frame_button_brown"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/gip_mine_publicforum_radioButton_collectTheme"
                style="@style/goverinterpeople_mine_radiobutton_style"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="我收藏的主题"
                android:textColor="@color/gip_second_frame_button_brown"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/gip_mine_radioButton_suggestionPlatform"
                style="@style/goverinterpeople_mine_radiobutton_style"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="我参与的热点"
                android:textColor="@color/gip_second_frame_button_brown"
                android:textSize="12sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/goverinterpeople_mine_12345_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent" >
        </ListView>
    </LinearLayout>

</LinearLayout>