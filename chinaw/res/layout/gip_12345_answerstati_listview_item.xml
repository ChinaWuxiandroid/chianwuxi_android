<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="部门："
                android:textColor="@color/gip_second_frame_button_brown"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/gip_12345_answerstati_depname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="市人保局"
                android:textColor="@color/gip_second_frame_button_brown"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="收件数："
                android:textColor="@color/gip_txt_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/gip_12345_answerstati_acceptedNum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="764"
                android:textColor="@color/gip_txt_gray"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="处理数："
                android:textColor="@color/gip_txt_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/gip_12345_answerstati_replyNum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="739"
                android:textColor="@color/gip_txt_gray"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="回复率："
                android:textColor="@color/gip_txt_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/gip_12345_answerstati_replyRate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="99%"
                android:textColor="@color/gip_txt_gray"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="平均答复工作日数："
                android:textColor="@color/gip_txt_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/gip_12345_answerstati_replyDay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="5.5"
                android:textColor="@color/gip_txt_gray"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>