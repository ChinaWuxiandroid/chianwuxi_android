<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/gip_vedio_live_home_notice_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="视频预告"
        android:textColor="#FF4500" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/gip_vedio_live_home_theme_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:text="访谈主题：" />

        <TextView
            android:id="@+id/gip_vedio_live_home_theme_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="锤炼过硬作风，创出过硬成果，在实现百姓“平安梦”中担当主力军" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/gip_vedio_live_home_time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:text="访谈时间：" />

        <TextView
            android:id="@+id/gip_vedio_live_home_time_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2013年5月10日上午10:00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/gip_vedio_live_home_guest_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:text="访谈嘉宾：" />

        <TextView
            android:id="@+id/gip_vedio_live_home_guest_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无锡市副市长、公安局长 赵志新" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp" >

        <RadioGroup
            android:id="@+id/gip_vedio_live_home_radioGroup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/gip_video_live_home_radioBtn_vediolive"
                style="@style/goverinterpeople_mine_radiobutton_style"
                android:layout_weight="1"
                android:background="@drawable/gip_button_selected_bk"
                android:checked="true"
                android:text="视频直播"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/gip_video_live_home_radioBtn_memoir"
                style="@style/goverinterpeople_mine_radiobutton_style"
                android:layout_weight="1"
                android:text="访谈实录"
                android:textColor="@color/gip_second_frame_button_brown"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/gip_video_live_home_radioBtn_message"
                style="@style/goverinterpeople_mine_radiobutton_style"
                android:layout_weight="1"
                android:text="留言提问"
                android:textColor="@color/gip_second_frame_button_brown"
                android:textSize="12sp" />
        </RadioGroup>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/gip_vedio_live_home_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>