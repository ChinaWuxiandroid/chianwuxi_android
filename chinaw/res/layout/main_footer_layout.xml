<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RadioGroup
        android:id="@+id/main_tab_radiogroup"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/main_tab_index"
            style="@style/main_tab_bottom"
            android:checked="true"
            android:drawableTop="@drawable/main_tab_index_style"
            android:text="     首页     " 
            android:layout_weight="1"
            android:textSize="12sp"
            />

        <RadioButton
            android:id="@+id/main_tab_search"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/main_tab_search_style"
            android:text="   搜索   " 
            android:textSize="12sp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/main_tab_login_reg"
            style="@style/main_tab_bottom"
            
            android:drawableTop="@drawable/index_login_icon"
            android:text="登录/注册"
            android:textSize="12sp"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/main_tab_mine"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/main_tab_mine_style"
            android:text="我的政民互动"
            android:textSize="12sp"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/main_tab_more"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/main_tab_more_style"
            android:text="设置" 
            android:textSize="12sp"
            android:layout_weight="1"/>
    </RadioGroup>

</RelativeLayout>