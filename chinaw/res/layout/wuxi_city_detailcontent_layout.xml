<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wuxicity_decontent_ll"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/wuxicity_decontent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:text="建置沿革"
        android:textColor="#0E71BE"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/wuxi_decontent_tvtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间: 2013年5月24日" />

        <TextView
            android:id="@+id/wuxi_decontent_tvbrowcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="浏览次数 : 8" />
    </LinearLayout>

    <WebView
        android:id="@+id/wuxicity_decontent_wb"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dip" />

</LinearLayout>