<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/gip_hottopic_listview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5sp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="关于在我市开展就业社保民生实事主题宣传活动的话题"
        android:textColor="@color/gip_second_frame_button_brown"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5sp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="发布时间:"
            android:textColor="@color/gip_second_frame_button_brown"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/gip_hottopic_listview_beginTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2013-06-04"
            android:textColor="@color/gip_second_frame_button_brown"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="截止时间:"
            android:textColor="@color/gip_second_frame_button_brown"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/gip_hottopic_listview_endTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2013-06-3"
            android:textColor="@color/gip_second_frame_button_brown"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/gip_hottopic_listview_discuss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="5sp"
        android:gravity="right"
        android:text="参与讨论"
        android:textColor="@color/gip_txt_green"
        android:textSize="12sp" />

</LinearLayout>