<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_shape_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        layout="@layout/child_fragment_itemcontent_header_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="9"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/govermsg_infoopen_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="绿羊温泉又获殊荣"
            android:textColor="@color/gip_button_blue"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布时间："
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/govermsg_infoopen_publishTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2013年09月21号"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改时间："
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/govermsg_infoopen_updateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2013年09月21号"
                    android:textSize="10sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览次数："
                android:textSize="10sp" />

            <TextView
                android:id="@+id/govermsg_infoopen_browseCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/worksuggestbox_back"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="生成日期"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/govermsg_infoopen_buildTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/worksuggestbox_back"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="2010年09月21日"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/worksuggestbox_back"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="公开日期"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/govermsg_infoopen_openTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/worksuggestbox_back"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="2010年09月21日"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/worksuggestbox_back"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="发布机构"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/govermsg_infoopen_organization"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/worksuggestbox_back"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="政府办"
                android:textSize="10sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ProgressBar
                android:id="@+id/govermsg_infoopen_pb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <WebView
                android:id="@+id/govermsg_infoopen_webview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dip" />
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp" >

        <TextView
            android:id="@+id/govermsg_infoopen_contentSource"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:text="无锡市发展和改革委员会"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/govermsg_infoopen_contentSource"
            android:gravity="center_vertical|left"
            android:text="来源:"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>