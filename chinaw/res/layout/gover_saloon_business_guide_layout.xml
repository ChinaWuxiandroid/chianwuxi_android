<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/gover_buness_guide_rg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_personal"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gover_buessguide_btn_selector"
            android:button="@null"
            android:text="个人办事"
            android:textColor="#CC0000"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_company"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="@drawable/gover_buessguide_btn_selector"
            android:button="@null"
            android:text="企业办事"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_style_service"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="@drawable/gover_buessguide_btn_selector"
            android:button="@null"
            android:text="主题服务"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_green"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="@drawable/gover_buessguide_btn_selector"
            android:button="@null"
            android:text="绿色通道"
            android:textSize="12sp" />
    </RadioGroup>

    <GridView
        android:id="@+id/gover_guide_gv_kindtype"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:layout_below="@+id/gover_buness_guide_rg"
        android:background="@android:color/white"
        android:numColumns="5"
        android:stretchMode="columnWidth" >
    </GridView>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gover_guide_gv_kindtype" >

        <ProgressBar
            android:id="@+id/gover_guide_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <ListView
            android:id="@+id/gover_guid_lv_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             android:divider="@android:color/white"
            android:dividerHeight="1dip"
            android:cacheColorHint="@android:color/transparent" >
        </ListView>
    </FrameLayout>


</RelativeLayout>