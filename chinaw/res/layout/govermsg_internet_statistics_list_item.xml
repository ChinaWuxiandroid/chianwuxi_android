<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/govermsg_answerstati_depname"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="5sp"
        android:gravity="center_vertical"
        android:text="市人保局"
        android:textColor="@color/gip_second_frame_button_brown"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="5sp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="收件数："
            android:textColor="@color/gip_txt_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/govermsg_answerstati_acceptedNum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="764"
            android:textColor="@color/gip_txt_gray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="处理数："
            android:textColor="@color/gip_txt_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/govermsg_answerstati_replyNum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="739"
            android:textColor="@color/gip_txt_gray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="回复率："
            android:textColor="@color/gip_txt_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/govermsg_answerstati_replyRate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="99%"
            android:textColor="@color/gip_txt_gray"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>