<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/header_back"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/search_content_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/slide_back_btn" />

        <TextView
            android:id="@+id/search_Title_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/search_content_back_btn"
            android:singleLine="true"
            android:text="全站搜索"
            android:textSize="20dip" />

        <ImageView
            android:id="@+id/search_content_show_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/search_content_setting"
            android:src="@drawable/slide_open_close_btn" />

        <ImageView
            android:id="@+id/search_content_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/search_content_share"
            android:src="@drawable/search_setting" />

        <ImageView
            android:id="@+id/search_content_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/search_share" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="#ffffff" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/search_result_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="绿羊温泉又获殊荣"
                android:textColor="#005da5"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/search_result_release_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="发布时间：2012年10月18日"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/search_result_modification_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="修改时间：2012年10月18日"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/search_result_watch_times"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="浏览次数：8"
                    android:textSize="9sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/search_result_source"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="来源：无锡市史志办"
                android:textSize="8sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cacaca" />

            <TextView
                android:id="@+id/search_result_content"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="      一、为使市政府各项工作规范化,制度化、法制化、进一步提供政府。。。。"
                android:textColor="#005da5"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>