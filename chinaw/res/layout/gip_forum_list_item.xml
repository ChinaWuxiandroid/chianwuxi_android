<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/gip_forum_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="5sp"
        android:text="无锡市总工会机关作风建设问卷调查"
        android:textColor="@color/gip_second_frame_button_brown"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/gip_forum_begintime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:textColor="@color/gip_second_frame_button_brown" 
            android:textSize="8sp"
            android:text="发帖时间："/>
        
        <TextView 
            android:id="@+id/gip_forum_begintime_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:textColor="@color/gip_second_frame_button_brown" 
            android:textSize="8sp"
            android:text="2013-04-09"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/gip_forum_readCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:textColor="@color/gip_second_frame_button_brown" 
            android:textSize="8sp"
            android:text="点击："/>
        
        <TextView 
            android:id="@+id/gip_forum_readCount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:textColor="@color/gip_second_frame_button_brown" 
            android:textSize="8sp"
            android:text="12345"
            />
        
        <TextView
            android:id="@+id/gip_forum_resultCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:textColor="@color/gip_second_frame_button_brown" 
            android:textSize="8sp"
            android:text="回应："/>
        
        <TextView 
            android:id="@+id/gip_forum_resultCount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:textColor="@color/gip_second_frame_button_brown" 
            android:textSize="8sp"
            android:text="321"
            />
        
         <TextView
            android:id="@+id/gip_forum_sentUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:textColor="@color/gip_second_frame_button_brown" 
            android:textSize="8sp"
            android:text="发帖人："/>
        
        <TextView 
            android:id="@+id/gip_forum_sentUser_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:textColor="@color/gip_second_frame_button_brown" 
            android:textSize="8sp"
            android:text="张克平"
            />
        
    </LinearLayout>

</LinearLayout>