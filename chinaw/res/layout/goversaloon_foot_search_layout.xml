<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F8F8"
    android:orientation="horizontal" >

    <Spinner
         android:layout_marginLeft="5dip"
        android:id="@+id/goversaloon_sp_szxk"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/spinner_bg" />

    <Button
        android:id="@+id/goversaloon_btn_statesearch"
        android:layout_width="0dip"
        android:layout_height="30dip"
        android:layout_weight="1"
        android:layout_marginLeft="5dip"
        android:text="状态查询"
        android:textSize="12sp"
        android:textColor="#000000"
        android:background="@drawable/coustome_btn_bg" />

    <Button
        android:id="@+id/goversaloon_btn_count"
        android:layout_width="0dip"
        android:layout_height="25dip"
        android:layout_weight="1"
          android:layout_marginLeft="5dip"
        android:background="@drawable/goversaloon_search_bg"
        android:text="办件统计"
        android:textColor="#ffffff"
        android:textSize="12sp" />

</LinearLayout>