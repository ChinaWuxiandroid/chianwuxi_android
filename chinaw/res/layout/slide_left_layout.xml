<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:scrollbars="none" >

    <RadioGroup
        android:id="@+id/slide_left_tab_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="none" >

        <RadioButton
            android:id="@+id/left_tab_public_goverment"
            style="@style/slide_left_radio_bottom"
            android:background="#8E8E8E"
            android:checked="true"
            android:text="政府信息公开" />

        <RadioButton
            android:id="@+id/left_tab_xicheng"
            style="@style/slide_left_radio_bottom"
            android:background="#8E8E8E"
            android:text="魅力锡城" />

        <RadioButton
            android:id="@+id/left_tab_msg_center"
            style="@style/slide_left_radio_bottom"
            android:background="#8E8E8E"
            android:text="资讯中心" />

        <RadioButton
            android:id="@+id/left_tab_hotall"
            style="@style/slide_left_radio_bottom"
            android:background="#8E8E8E"
            android:text="政务大厅" />

        <RadioButton
            android:id="@+id/left_tab_public_service"
            style="@style/slide_left_radio_bottom"
            android:background="#8E8E8E"
            android:text="公共服务" />

        <RadioButton
            android:id="@+id/left_tab_hudong"
            style="@style/slide_left_radio_bottom"
            android:background="#8E8E8E"
            android:text="政民互动" />
    </RadioGroup>

</ScrollView>